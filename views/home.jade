html
  head
    link(rel="stylesheet" href="/static/css/home.css")
    link(rel="stylesheet" href="/static/css/__auth.css")
  body
    div.background__image#background__image--img
    div.background__image#background__image--dots
    #main__header
      span.text
      div.cursor
    #main__subheader
      span.text
      div.cursor
    div.center__wrap.center__wrap--input
      div.input__wrap#auth
        div.type__wrap
          div.type__object(v-bind:class="{'type__object--active': login}" @click="toggleLogin()") login
          div.type__object(v-bind:class="{'type__object--active': !login}" @click="toggleLogin()") signup
        div.cool__message(v-bind:class="{'cool__message--error': errorMsg, 'cool__message--good': goodMsg}") {{goodMsg?goodMsg:errorMsg}}
        form(v-show="login" @submit="login($event)")
          input.cool__input(v-model="login.username" placeholder="Username or Email")
          input.cool__input(v-model="login.password" placeholder="Password" type="password")
          div.cool__buttonWrap
            div.cool__button
            div.cool__label Remember Me
          button.cool__input.cool__input--submit(type="submit") {{(loading? '': 'Login')}}
            div.cool__loading(v-show="loading")
        form(v-show="!login" @submit="signup($event)")
          input.cool__input(v-model="signup.username" placeholder="Username")
          input.cool__input(v-model="signup.password" placeholder="Password" type="password")
          input.cool__input(v-model="signup.email" placeholder="Email or Phone")
          button.cool__input.cool__input--submit(type="submit") {{(loading? '': 'Signup')}}
            div.cool__loading(v-show="loading")

  script(src="/static/js/write.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.1.3/vue.min.js")
  script(src="/static/js/home.js")