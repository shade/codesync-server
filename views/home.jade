html
  head
    link(rel="stylesheet" href="/static/css/home.css")
    link(rel="stylesheet" href="/static/css/__auth.css")
  body
    div.background__image#background__image--img
    div.background__image#background__image--dots
    #main__header
      span.text
      div.cursor
    #main__subheader
      span.text
      div.cursor
    div.center__wrap.center__wrap--input
      div.input__wrap#auth
        div.type__wrap
          div.type__object(v-bind:class="{'type__object--active': login}" @click="login = !login") login
          div.type__object(v-bind:class="{'type__object--active': !login}" @click="login = !login") signup
        form(v-show="login")
          input.cool__input(placeholder="Username or Email")
          input.cool__input(placeholder="Password" type="password")
          div.cool__buttonWrap
            div.cool__button
            div.cool__label Remember Me
          input.cool__input.cool__input--submit(value="Login" type="submit")
        form(v-show="!login")
          input.cool__input(placeholder="Username")
          input.cool__input(placeholder="Password" type="password")
          input.cool__input(placeholder="Email or Phone")
          input.cool__input.cool__input--submit(value="Signup" type="submit")

  script(src="/static/js/write.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.1.3/vue.min.js")
  script(src="/static/js/home.js")